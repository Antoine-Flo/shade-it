{
  "name": "Shade it",
  "description": "Apply shaders to your browser",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_title": "Shade it",
    "default_popup": "popup/index.html",
    "default_icon": "assets/icons/logo.png"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "background": {
    "service_worker": "stateManager.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "css": [
        "overlay/overlay.css"
      ],
      "js": [
        "overlay/shader.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "overlay/*.glsl"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}